{
  "extends": [
    "solhint:all"
  ],
  "plugins": [],
  "rules": {
    "foundry-test-functions": [
      "off"
    ],
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "gas-custom-errors": [
      "error"
    ],
    "gas-small-strings": [
      "off"
    ],
    "gas-strict-inequalities": [
      "off"
    ],
    "reason-string": [
      "off"
    ]
  }
}
